{
  "name": "optimizely-service",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:grug/optimizely-service.git",
  "author": "Dave Cooper <dave@davecooper.org>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/",
    "test": "jest",
    "build": "yarn clean && tsc && babel dist/optimizelyService.js --out-file dist/optimizelyService.js && uglifyjs dist/optimizelyService.js -mco dist/optimizelyService.js"
  },
  "jest": {
    "testRegex": "\\.(test|spec)\\.ts?$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@types/jest": "^24.0.13",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1",
    "uglify-js": "^3.6.0"
  }
}
